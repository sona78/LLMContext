{
  "manifest_version": 3,
  "name": "You.AI",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "permissions": [
    "activeTab",
    "scripting",
    "contentSettings",
    "tabs",
    "storage",
    "camera"
  ],
  "host_permissions": [
    "<all_urls>" 
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["*"], 
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "scraping.js"
  }
}
